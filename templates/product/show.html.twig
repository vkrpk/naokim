{% extends "base.html.twig" %}

{% block body %}
	{% set table = app.request.pathinfo|split('/') %}
	<div class="card position-relative border-0" style="width: 18rem;">
		<img src="{{product.mainpicture}}" class="card-img-top rounded-3" alt="Image du produit">
		<div class="card-body d-flex flex-column">
			<h6>{{product.name}}</h6>
			<div class="btn-group btn-group-toggle btn-color-group d-block mt-n2 ml-n22">
				{% for color in colors %}
					<span class="btn rounded-circle p-2 me-2 my-2 bg-{{color}} {{color == 'white'? 'rounded-circle border-gray'}}"></span>
				{% endfor %}
			</div>
			<p class="card-text mb-0">{{product.description|u.truncate(100, '...')}}</p>
			<div class="d-flex align-items-center justify-content-between">
				<p class="fw-bold mb-0">{{product.price / 100}}&euro;</p>
				<a href="{{path('cart_add', {'id': product.id, 'table': table[1]})}}" class="btn btn-success">
					<i class="bi bi-cart-plus me-1"></i>Ajouter
				</a>
			</div>
		</div>
	</div>
{% endblock %}
