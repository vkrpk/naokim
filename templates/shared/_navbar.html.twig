{% set navLinkClasses = "nav-link link-white nav-link-classes" %}
{% block stylesheets %}

	<link rel="stylesheet" href="navbar.css">
{% endblock %}
<header class="bg-secondary navbar py-3">
	<nav class=" w-100 d-flex justify-content-between align-items-center container">
		<div class="w-30 d-flex">
			<a class="navbar-brand ps-0 {{ navLinkClasses }}" href="{{path('home')}}">LOGO</a>
		</div>
		<div class="w-30 d-flex">
			<form class="d-flex input-group">
				<input type="search" class="form-control border-0 rounded-pill" placeholder="Rechercher un produit" aria-label="search" style="width: 250px;">
				<button type="submit" class="input-group-text text-secondary bg-transparent border-0 rounded-pill" style="position: absolute; right: 0;">
					<i class="bi bi-search"></i>
				</button>
			</form>
		</div>
		<div class="w-30 d-flex">
			<ul class="d-flex">
				<li class="nav-item">
					<a href="{{path('product_all')}}" class="{{ navLinkClasses }}">Produits</a>
				</li>
				<li class="nav-item">
					<a href="{{path('service_all')}}" class="{{ navLinkClasses }}">Services</a>
				</li>
				<li class="nav-item">
					<a href="{{path('cart_show')}}" class="{{ navLinkClasses }}">
						<i class="bi bi-cart me-1"></i>
						{{cartService.detailedCartItems|length > 0 ? cartService.detailedCartItems|length }}
					</a>
				</li>
				{% if app.user %}
					<li class="nav-item">
						<a href="{{ path('purchase_index') }}" class="{{ navLinkClasses }}">Mes commandes</a>
					</li>
					<li class="nav-item">
						<a href="{{path('app_logout')}}" class="{{ navLinkClasses }}">Déconnexion</a>
					</li>
				{% else %}
					<li class="nav-item">
						<a href="{{path('app_login')}}" class="{{ navLinkClasses }}">Me connecter</a>
					</li>
				{% endif %}
			</ul>
		</div>

	</nav>
</header>
<nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
	<div class="container">
		<a class="navbar-brand" href="{{path('home')}}">LOGO</a>
