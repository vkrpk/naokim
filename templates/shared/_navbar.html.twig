			<span class="navbar-toggler-icon"></span>
		</button>
		<div class="collapse navbar-collapse" id="navbarSupportedContent">
			<ul class="navbar-nav me-auto mb-2 mb-lg-0">
				<li class="nav-item">
					<a href="{{path('product_all')}}" class="{{ navLinkClasses }}">Produits</a>
				</li>
				<li class="nav-item">
					<a href="{{path('service_all')}}" class="{{ navLinkClasses }}">Services</a>
				</li>
				<li class="nav-item">
					<a href="{{path('cart_show')}}" class="{{ navLinkClasses }}">
						<i class="bi bi-cart me-1"></i>
						{{cartService.detailedCartItems|length > 0 ? cartService.detailedCartItems|length }}
					</a>
				</li>
				{% if app.user %}
					<li class="nav-item">
						<a href="{{ path('purchase_index') }}" class="{{ navLinkClasses }}">Mes commandes</a>
					</li>
					<li class="nav-item">
						<a href="{{path('app_logout')}}" class="{{ navLinkClasses }}">Déconnexion</a>
					</li>
				{% else %}
					<li class="nav-item">
						<a href="{{path('app_login')}}" class="{{ navLinkClasses }}">Me connecter</a>
					</li>
				{% endif %}
			</ul>
			<form class="d-flex input-group" style="width: 250px">
				<input class="form-control border-0 rounded-pill" type="search" placeholder="Search" aria-label="Search">
				<button class="input-group-text rounded-pill border-0 bg-transparent position-absolute end-0" type="submit">
					<i class="bi bi-search"></i>
				</button>
			</form>
		</div>
	</div>
