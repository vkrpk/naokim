{% block stylesheets %}
	{{ encore_entry_link_tags('footer') }}
{% endblock %}
{% set links_coqpix = ['Offres', 'Aide','À propos','Fonctionnalités' ]%}
{% set links_legal = ['Mentions légales',"Conditions générales d'utilisation",'Cookies' ]%}
{% set address = ['Pays, ville, adresse',"Numéro",'Mail' ]%}

<footer class="bg-secondary py-4 flex-shrink-0 w-100">
	<div class="container">
		<div class="row justify-content-between">
			<div class="col-6 col-lg-3">
				<h5 class="text-primary">Coqpix</h5>
				<ul>
					{% for links in links_coqpix  %}
						<li>
							<a href="#">{{links}}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-6 col-lg-3">
				<h5 class="text-primary">Contacts</h5>
				<ul>
					{% for line in address %}
						<li>
							<p class="mb-0">
								{{line}}
							</p>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-xs col-sm-6 col-lg-3 py-3 pb-sm-0 pt-lg-0">
				<h5 class="text-primary">Légal</h5>
				<ul>
					{% for links in links_legal  %}
						<li>
							<a class="" href="#">{{links}}</a>
						</li>
					{% endfor %}
				</ul>
			</div>
			<div class="col-xs col-sm-6 col-lg-3 pt-sm-3 pt-lg-0">
				<h5 class="text-primary">Newsletter</h5>
				<ul>
					<li>
						<div class="input-group mb-3">
							<input type="email" class="form-control rounded-pill" placeholder="Email"/>
							<button type="submit" class="input-group-text rounded-pill bg-primary text-white" style="position: absolute; right: 0;">
								<i class="bi bi-chevron-right"></i>
							</button>
						</div>
					</li>
					<li>
						<a class="bi bi-facebook me-3" href="#!" role="button"></a>
						<a class="bi bi-twitter me-3" href="#!" role="button"></a>
						<a class="bi bi-instagram me-3" href="#!" role="button"></a>
					</li>
				</ul>
			</div>
		</div>
	</div>
</footer>
