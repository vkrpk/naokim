<section class="text-center">
	<div id="{{id}}" class="carousel carousel-dark slide my-5 px-5" data-bs-ride="carousel">
		<h3 class="mb-0">{{title}}</h3>
		<div class="carousel-indicators">
			{% for i in 1..3 %}
				<button type="button" data-bs-target="#{{id}}" data-bs-slide-to="{{ loop.index0 }}" class="{{ loop.first ? 'active' }}"></button>
			{% endfor %}
		</div>
		{% for i in 1..3 %}{% endfor %}
		<div class="carousel-inner p-5 m-0">
			<div class="carousel-item active">
				{% for i in entity|slice(0, 4) %}
					{{ include("shared/_card.html.twig") }}
				{% endfor %}
			</div>
			<div class="carousel-item">
				{% for i in entity|slice(4, 4) %}
					{{ include("shared/_card.html.twig") }}
				{% endfor %}
			</div>
			<div class="carousel-item">
				{% for i in entity|slice(8, 4) %}
					{{ include("shared/_card.html.twig") }}
				{% endfor %}
			</div>
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#{{id}}" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#{{id}}" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</section>
