<form class="d-flex input-group" action="{{path('navbar_search_bar')}}" method="GET">
	<input type="search" name="q" class="form-control border-0 rounded-pill" placeholder="Rechercher un produit" aria-label="search" style="width: {{width|default('250')}}px;">
	<input type="hidden" name="_csrf_token" value="{{ csrf_token('token-name') }}">
	<button type="submit" class="input-group-text text-secondary bg-transparent border-0 rounded-pill" style="position: absolute; right: 0;">
		<i class="bi bi-search"></i>
	</button>
</form>
