{% extends "base.html.twig" %}

{% block body %}
	{% set table = app.request.pathinfo|split('/') %}
	<div class="card position-relative border-0" style="width: 18rem;">
		<img src="{{service.mainpicture}}" class="card-img-top rounded-3" alt="Image du service">
		<div class="card-body d-flex flex-column">
			<h6>{{service.name}}</h6>
			<p class="card-text mb-0">{{service.description|u.truncate(100, '...')}}</p>
			<div class="d-flex align-items-center justify-content-between">
				<p class="fw-bold mb-0">{{service.price / 100}}&euro;</p>
				<a href="{{path('cart_add', {'id': service.id, 'table': table[1]})}}" class="btn btn-success">
					<i class="bi bi-cart-plus me-1"></i>Ajouter
				</a>
			</div>
		</div>
	</div>
{% endblock %}
