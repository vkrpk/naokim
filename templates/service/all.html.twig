{% extends "base.html.twig" %}

{% block stylesheets %}

	{{ parent() }}

	{{ encore_entry_link_tags('filter') }}

{% endblock %}


{% block javascripts %}

	{{ parent() }}

	{{ encore_entry_script_tags('filter') }}

{% endblock %}


{% block title %}
	Les services
{% endblock %}

{% block body %}
	<h3>Les services</h3>
	<div class="row">
		{% for service in services %}
			<div class="col-auto d-flex g-4">
				<div class="card position-relative border-0" style="width: 18rem;">
					<img src="{{service.mainpicture}}" class="card-img-top rounded-3" alt="Image du produit">
					<div class="card-body d-flex flex-column">
						<a class="h5" href="{{path('service_show', {'category_slug': service.category.slug, 'slug': service.slug})}}">{{service.name}}</a>
						<p class="card-text mb-0">{{service.description|u.truncate(100, '...')}}</p>
						<p class="fw-bold mb-0">{{service.price / 100}}&euro;</p>
						<p>
							<em>
								<a href="{{path('service_category_show', {'slug': service.category.slug})}}">{{service.category.name}}</a>
							</em>
						</p>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
