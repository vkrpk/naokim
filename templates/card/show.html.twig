{% extends "base.html.twig" %}

{% block title %}
	{{title}}
{% endblock %}

{% block body %}
	{% set table = app.request.pathinfo|split('/') %}
	<div class="card position-relative border-0" style="max-width: 400px">
		<img src="{{result.mainpicture}}" class="rounded-4 img-fluid" alt="Image de {{result.name}}">
		<div class="card-body d-flex flex-column">
			<h6>{{result.name}}</h6>
			{% if "product" in result.__toString  %}
				{{include('card/_circle-colors.html.twig')}}
			{% endif %}
			<p class="card-text mb-0">{{result.description}}</p>
			<div class="d-flex align-items-center justify-content-between mt-3">
				<p class="fw-bold mb-0">{{result.price / 100}}&euro;</p>
				<a href="{{path('cart_add', {'id': result.id, 'table': table[1]})}}" class="btn btn-success">
					<i class="bi bi-cart-plus me-1"></i>Ajouter
				</a>
			</div>
		</div>
	</div>
{% endblock %}
