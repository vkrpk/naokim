<div class="col-auto d-flex g-4">
	<div class="card position-relative border-0" style="width: 18rem;">
		<img src="{{result.mainpicture}}" class="card-img-top rounded-3" alt="Image du produit">
		<div class="card-body d-flex flex-column">
			<a class="h5" href="{{path(result.entity ~ '_show', {'category_slug': result.category.slug, 'slug': result.slug})}}">{{result.name}}</a>
			{% if result.entity is same as 'product' %}
				<div class="btn-group btn-group-toggle btn-color-group d-block mt-n2 ml-n22">
					{% for color in colors %}
						<span class="btn rounded-circle p-2 me-2 my-2 bg-{{color}} {{color == 'white'? 'rounded-circle border-gray'}}"></span>
					{% endfor %}
				</div>
			{% endif %}
			<p class="card-text mb-0">{{result.description|u.truncate(100, '...')}}</p>
			<p class="fw-bold mb-0">{{result.price / 100}}&euro;</p>
			<p>
				<em>
					<a href="{{path(result.entity ~ '_category_show', {'slug': result.category.slug})}}">{{result.category.name}}</a>
				</em>
			</p>
		</div>
	</div>
</div>
